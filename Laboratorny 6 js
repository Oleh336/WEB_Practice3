
const num1Input = document.getElementById('num1');
const num2Input = document.getElementById('num2');
const calculateBtn = document.getElementById('calculate-btn');
const toggleResultBtn = document.getElementById('toggle-result-btn');
const resultDiv = document.getElementById('result');
const resultValueSpan = document.getElementById('result-value');
const errorMessage = document.getElementById('error-message');


function isValidNumber(value) {
    return !isNaN(value) && value.trim() !== '';
}


function calculate() {
    const num1 = num1Input.value;
    const num2 = num2Input.value;

    
    if (isValidNumber(num1) && isValidNumber(num2)) {
        const sum = parseFloat(num1) + parseFloat(num2);
        resultValueSpan.textContent = sum;  
        resultDiv.classList.remove('hidden');  
        errorMessage.classList.add('hidden');   
    } else {
        
        errorMessage.classList.remove('hidden');
        resultDiv.classList.add('hidden');
    }
}


function toggleResult() {
    if (resultDiv.classList.contains('hidden')) {
        resultDiv.classList.remove('hidden');
        toggleResultBtn.textContent = 'Приховати результат';
    } else {
        resultDiv.classList.add('hidden');
        toggleResultBtn.textContent = 'Показати результат';
    }
}


calculateBtn.addEventListener('click', calculate);
toggleResultBtn.addEventListener('click', toggleResult);
